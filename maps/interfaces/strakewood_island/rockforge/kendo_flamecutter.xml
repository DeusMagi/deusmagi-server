<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE interfaces
  PUBLIC '-//Atrinik//ADS-1 1.1.2//EN'
  'ads-1.dtd'>
<interfaces>
    <interface>
        <dialog name="hello">
            <message>Lembas... again....</message>
            <response destination="whatwrong" message="What's wrong?"/>
        </dialog>
        <dialog name="whatwrong">
            <message>The cooks just keep purchasing waybread from the elves...</message>
            <response destination="howcome" message="How come?"/>
        </dialog>
        <dialog name="howcome">
            <message color="yellow">{npc.name} grumbles.</message>
            <message>Lazy buggers, that's my guess...</message>
        </dialog>
    </interface>
</interfaces>
